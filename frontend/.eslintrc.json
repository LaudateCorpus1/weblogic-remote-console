{
    "env": {
        "browser": true,
        "amd": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "globals": {
      "requirejs": "off"
    },
    "overrides": [
      {
        "files": ["src/js/viewModels/configuration.js", "src/js/viewModels/monitoring.js"],
        "env": {
          "node": true
        },
        "rules": {
            "strict": "off",
            "no-undef": "off",
            "no-unused-vars": "off"
        }
      }
    ],
    "rules": {
      "strict": "off",
      "no-console": "off"
    }
}

    The Universal Permissive License (UPL), Version 1.0
-->
  <id>zip</id>
  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet> <!-- include the assembled console jar -->
      <directory>../console-assembly/target</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>console.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet> <!-- include the 3rd party dependency JARS in the lib folder -->
      <outputDirectory>libs</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <excludes>
        <exclude>com.oracle.weblogic:console-assembly</exclude>
        <exclude>com.oracle.weblogic:console-backend-server</exclude>
      </excludes>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
